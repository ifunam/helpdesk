!!! XML
!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang=>"en"}
  %head
    %title
      = "Stifunam #{controller.controller_name.capitalize}"
    = stylesheet_link_tag "tech_support/ticket_versions"
    = javascript_include_tag 'jquery-1.3.2', 'application'
    %body
      #layout_header
        %h1= "Seguimiento de Solicitudes de Servicio"
        %h2= "Instituto de Física - UNAM"
        %h3= "Secretaría Técnica de Cómputo y Telecomunicaciones"

      #main
        #login
          = "#{current_user.profile.login}"
          = "|"
          = link_to 'Salir',tech_support_logout_url
          %br
          = link_to 'Calendario de técnicos'
        #controller_title
          = "Historial de Cambios de Solicitud No. #{@ticket.id}"
        #user_profile
          #user_profile_item
            = "Nombre:  #{current_user.profile.fullname}"
          #user_profile_item
            = "Adscripción:  #{current_user.profile.adscription}  "

        = yield :layout
